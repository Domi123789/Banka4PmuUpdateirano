<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#FFE5EF">


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/korisnik"
        android:text="Korisnik"
        android:textSize="20sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:background="#F957FF"
       />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/transakcije"
        android:text="Transakcije"
        android:textSize="20sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toRightOf="@id/korisnik"
        android:layout_marginLeft="25dp"
        android:background="#F957FF"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/Lista"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/korisnik"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:scrollbars="vertical"
        android:background="#FF59AF"
        />
</androidx.constraintlayout.widget.ConstraintLayout>